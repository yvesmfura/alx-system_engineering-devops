#!/bin/bash

# Loop through each file in the directory
for file in *.sh; do
    # Check if the file exists and is a regular file
    if [ -f "$file" ]; then
        # Remove the .sh extension from the file name
        new_file="${file%.sh}"
        
        # Rename the file
        mv "$file" "$new_file"
        
        echo "Renamed $file to $new_file"
    fi
done
